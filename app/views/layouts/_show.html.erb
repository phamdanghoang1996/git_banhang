<div class="row">
  <h3>Thông tin sản phẩm</h3>
  <div class="col-md-4">
    <%= image_tag @products.photo, alt: 'Hinh anh san pham', class:'img-responsive ' %>
  </div>
  <div class="col-md-5">
    <div class="panel-default">
      <div class="panel-heading">
        <h5><strong>Tên sản phẩm:</strong> <%=@products.name%></h5>
        <p><strong>Giá sản phẩm: </strong><%=@products.price%> đồng</p>
        <p><strong>Còn lại: </strong> <%=@products.quantity%></p>
      </div>
    </div>
      <div class="panel-body">
        <p><%=@products.introduce%></p>
      </div>
      <div class="panel-footer">
        <%=link_to 'Đặt mua', {action: 'index', controller: 'buyproducts', id: @products.id} %>
      </div>
  </div>
  <div class="col-md-3">

  </div>
  <div class="col-md-12">
    <h4>Sản phẩm liên quan: </h4>
  </div>
</div>
