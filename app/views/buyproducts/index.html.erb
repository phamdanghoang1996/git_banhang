<%= stylesheet_link_tag 'rtable' %>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-5">
      <h4>Thông tin người nhận: </h4>
      <%= form_tag({controller: 'buyproducts', action: 'create', method: 'post'}, class:'form-group') do %>
        <%= label_tag('Họ và tên: ') %>
        <%= text_field(:customer,:name, class: 'form-control') %>
        <%= label_tag('Email: ')%>
        <%= email_field(:customer,:email, class: 'form-control') %>
        <%= label_tag('Số điện thoại: ')%>
        <%= text_field(:customer,:phonenumber, class: 'form-control') %>
        <%= label_tag('Địa chỉ: ') %>
        <%= text_field(:customer,:address, class: 'form-control')  %>
        <%= label_tag('Số lượng đặt ') %>
        <%= number_field_tag(:order,:quantity, class:'form-control', id:'quantity') %>
        <%= submit_tag 'Gửi thông tin' %>
    </div>
    <div class="col-md-7">
      <h4>Thông tin sản phẩm: </h4>
      <div class="rTable">
				 <div class="rTableRow">
    			<div class="rTableHead"><strong> Hình ảnh sản phẩm </strong></div>
    			<div class="rTableHead"><strong> Tên sản phẩm </strong></div>
    			<div class="rTableHead"><strong> Đơn gía </strong></div>
				 </div>
				 <div class="rTableRow">
  				 <div class="rTableCell"><%= image_tag "/public/images/bongda/sp1.jpg", alt: 'San pham', class: 'img-responsive product' %></div>
  				 <div class="rTableCell"><p> <%= @products.name %> </p></div>
  				 <div class="rTableCell"><p id="price" value="<%= @products.price %>"> <%= @products.price %> đồng/chiếc </p></div>
				 </div>
			</div>
      <div class="total">
        <h4 class="text-right">Thành tiền: <span id="showtotal"></span> </h4>
      </div>
    </div>
    <% end %>
  </div>
</div>
